datasource db {
  provider = "postgresql"
  url = "***"
}

generator client {
  provider = "prisma-client-js"
}

enum ContributionState {
  pending
  completed
  cancelled

  @@map("contribution_state")
}

model Contribution {
  id Int @default(autoincrement()) @id
  state ContributionState
  amountInCents Int @map("amount_in_cents")
  email String

  @@map("contributions")
}